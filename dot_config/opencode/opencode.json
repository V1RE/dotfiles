{
  "$schema": "https://opencode.ai/config.json",
  "theme": "orng",
  "plugin": ["@tarquinen/opencode-dcp@latest", "opencode-gemini-auth@latest"],
  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "expo": {
      "url": "https://mcp.expo.dev/mcp",
      "enabled": false,
      "type": "remote"
    },
    "context7": {
      "url": "https://mcp.context7.com/mcp",
      "type": "remote",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "Figma": {
      "enabled": false,
      "type": "remote",
      "url": "http://127.0.0.1:3845/sse"
    },
    "maestro": {
      "enabled": false,
      "type": "local",
      "command": ["mise", "x", "maestro", "--", "maestro", "mcp"]
    },
    "Playwright": {
      "type": "local",
      "command": ["bun", "x", "@playwright/mcp@latest"]
    }
  },
  "lsp": {
    "lua-language-server": {
      "command": ["lua-language-server"],
      "extensions": [".lua"]
    }
  },
  "experimental": {
    "batch_tool": true,
    "openTelemetry": true,
    "primary_tools": ["prune"]
  },
  "agent": {
    "plan": {
      "permission": {
        "external_directory": "allow"
      }
    },
    "explore": {
      "permission": {
        "external_directory": "allow"
      }
    }
  },
  "username": "Niels"
}
