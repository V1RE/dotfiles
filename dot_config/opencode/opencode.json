{
  "$schema": "https://opencode.ai/config.json",
  "theme": "vercel",
  "permission": {
    "bash": {
      "*": "allow",

      "git *": "deny",
      "git status*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git diff*": "allow",
      "git blame*": "allow",
      "git annotate*": "allow",
      "git branch": "allow",
      "git branch -v*": "allow",
      "git branch --list*": "allow",
      "git branch --show-current*": "allow",
      "git tag -l*": "allow",
      "git tag --list*": "allow",
      "git tag -v*": "allow",
      "git remote -v*": "allow",
      "git remote show*": "allow",
      "git remote get-url*": "allow",
      "git ls-files*": "allow",
      "git ls-tree*": "allow",
      "git ls-remote*": "allow",
      "git rev-parse*": "allow",
      "git rev-list*": "allow",
      "git describe*": "allow",
      "git shortlog*": "allow",
      "git whatchanged*": "allow",
      "git grep*": "allow",
      "git fetch*": "allow",
      "git archive*": "allow",
      "git format-patch*": "allow",
      "git stash list*": "allow",
      "git stash show*": "allow",
      "git config --list*": "allow",
      "git config --get*": "allow",
      "git config -l*": "allow",
      "git help*": "allow",
      "git --help*": "allow",
      "git version*": "allow",
      "git --version*": "allow",
      "git cat-file*": "allow",
      "git show-ref*": "allow",
      "git show-branch*": "allow",
      "git for-each-ref*": "allow",
      "git name-rev*": "allow",
      "git merge-base*": "allow",
      "git verify-commit*": "allow",
      "git verify-tag*": "allow",
      "git fsck*": "allow",
      "git count-objects*": "allow",
      "git check-ignore*": "allow",
      "git check-attr*": "allow",
      "git reflog show*": "allow",
      "git reflog list*": "allow",
      "git notes list*": "allow",
      "git notes show*": "allow",
      "git worktree list*": "allow",
      "git submodule status*": "allow",
      "git submodule summary*": "allow",
      "git bundle verify*": "allow",
      "git bundle list-heads*": "allow",
      "git sparse-checkout list*": "allow",
      "git cherry*": "allow",
      "git range-diff*": "allow",

      "gh *": "deny",
      "gh pr view*": "allow",
      "gh pr list*": "allow",
      "gh pr status*": "allow",
      "gh pr checks*": "allow",
      "gh pr diff*": "allow",
      "gh issue view*": "allow",
      "gh issue list*": "allow",
      "gh issue status*": "allow",
      "gh issue create*": "allow",
      "gh repo view*": "allow",
      "gh repo list*": "allow",
      "gh repo clone*": "allow",
      "gh release view*": "allow",
      "gh release list*": "allow",
      "gh release download*": "allow",
      "gh run view*": "allow",
      "gh run list*": "allow",
      "gh run watch*": "allow",
      "gh run download*": "allow",
      "gh workflow view*": "allow",
      "gh workflow list*": "allow",
      "gh search*": "allow",
      "gh status*": "allow",
      "gh api*": "allow",
      "gh auth status*": "allow",
      "gh auth token*": "allow",
      "gh config list*": "allow",
      "gh config get*": "allow",
      "gh gist view*": "allow",
      "gh gist list*": "allow",
      "gh cache list*": "allow",
      "gh project view*": "allow",
      "gh project list*": "allow",
      "gh org list*": "allow",
      "gh ruleset*": "allow",
      "gh label list*": "allow",
      "gh secret list*": "allow",
      "gh variable list*": "allow",
      "gh variable get*": "allow",
      "gh ssh-key list*": "allow",
      "gh gpg-key list*": "allow",
      "gh codespace list*": "allow",
      "gh codespace view*": "allow",
      "gh codespace logs*": "allow",
      "gh codespace ports*": "allow",
      "gh extension list*": "allow",
      "gh alias list*": "allow",
      "gh attestation*": "allow",
      "gh browse --no-browser*": "allow",
      "gh browse -n*": "allow",
      "gh --help*": "allow",
      "gh help*": "allow",

      "gt *": "deny",
      "gt log*": "allow",
      "gt ls*": "allow",
      "gt ll*": "allow",
      "gt l *": "allow",
      "gt info*": "allow",
      "gt children*": "allow",
      "gt parent*": "allow",
      "gt trunk": "allow",
      "gt docs*": "allow",
      "gt guide*": "allow",
      "gt g *": "allow",
      "gt changelog*": "allow",
      "gt dash*": "allow",
      "gt pr*": "allow",
      "gt completion*": "allow",
      "gt --help*": "allow",
      "gt -h*": "allow",

      "lazygit*": "deny",
      "lg *": "deny",
      "lg": "deny",
      "tig*": "deny",
      "gitui*": "deny",
      "forgit*": "deny",
      "hub *": "deny",
      "hub": "deny",
      "lab *": "deny",
      "lab": "deny",
      "glab*": "deny"
    }
  },
  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "context7": {
      "url": "https://mcp.context7.com/mcp",
      "type": "remote",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "websearch-exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa",
      "enabled": true
    },
    "tlo": {
      "type": "local",
      "command": ["bunx", "@2digits/tlo-mcp"],
      "enabled": false
    },
    "figma-desktop": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
      "enabled": false
    },
    "opensrc": {
      "type": "local",
      "command": ["bunx", "opensrc-mcp"],
      "enabled": true
    }
  },
  "lsp": {
    "lua-language-server": {
      "command": ["lua-language-server"],
      "extensions": [".lua"]
    }
  },
  "experimental": {
    "batch_tool": true,
    "openTelemetry": true
  },
  "agent": {
    "plan": {
      "permission": {
        "external_directory": "allow"
      }
    },
    "explore": {
      "model": "github-copilot/claude-haiku-4.5",
      "permission": {
        "external_directory": "allow",
        "batch": "deny",
        "morph_edit": "deny"
      }
    },
    "general": {
      "permission": {
        "external_directory": "allow"
      }
    }
  },
  "username": "Niels",
  "plugin": [
    "@franlol/opencode-md-table-formatter@latest",
    "opencode-wakatime",
    "@2digits/opencode-plugin@latest"
  ]
}
