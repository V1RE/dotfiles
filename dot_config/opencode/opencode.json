{
  "$schema": "https://opencode.ai/config.json",
  "theme": "orng",
  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "context7": {
      "url": "https://mcp.context7.com/mcp",
      "type": "remote",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "websearch-exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa",
      "enabled": true
    }
  },
  "lsp": {
    "lua-language-server": {
      "command": ["lua-language-server"],
      "extensions": [".lua"]
    }
  },
  "experimental": {
    "batch_tool": true,
    "openTelemetry": true
  },
  "agent": {
    "plan": {
      "permission": {
        "external_directory": "allow"
      }
    },
    "explore": {
      "permission": {
        "external_directory": "allow"
      }
    }
  },
  "username": "Niels",
  "plugin": [
    "@franlol/opencode-md-table-formatter",
    "opencode-cursor-auth@1.0.16",
    "file:///Users/niels/Code/openmem/src/index.ts"
  ],
  "instructions": [
    "~/.config/opencode/plugin/morph-fast-apply/MORPH_INSTRUCTIONS.md"
  ],
  "provider": {
    "cursor": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Cursor Agent (local)",
      "options": {
        "baseURL": "http://127.0.0.1:32123/v1"
      },
      "models": {
        "auto": { "name": "Cursor Agent Auto" },
        "gpt-5": { "name": "Cursor Agent GPT-5 (alias â†’ gpt-5.2)" },
        "gpt-5.2": { "name": "Cursor Agent GPT-5.2" },
        "gpt-5.1": { "name": "Cursor Agent GPT-5.1" },
        "gpt-5.1-codex": { "name": "Cursor Agent GPT-5.1 Codex" },
        "sonnet-4.5": { "name": "Cursor Agent Sonnet 4.5" },
        "sonnet-4.5-thinking": { "name": "Cursor Agent Sonnet 4.5 Thinking" }
      }
    }
  }
}
